.container
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        %h2= t('login_title')
        = render "layouts/flash"
        %br
        = f.email_field :username, :class => "form-control", :autofocus => true, :placeholder => t('login_username_label')
        %br
        = f.password_field :password, :class => "form-control", :placeholder => t('login_password_label')
        %br
        %button{class: "btn btn-lg btn-primary btn-block"}=t('btn.sign_in')
